{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "0.1.1 Article",
        "description": "Create your blog content"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "SEO": {
            "type": "component",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "shared.seo",
            "repeatable": false
        },
        "title": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "cover": {
            "type": "media",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "images",
                "files"
            ]
        },
        "category": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::category.category",
            "inversedBy": "articles"
        },
        "gallery": {
            "type": "media",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "multiple": true,
            "required": true,
            "allowedTypes": [
                "images"
            ]
        },
        "content": {
            "type": "customField",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "customField": "plugin::ckeditor5.CKEditor",
            "options": {
                "preset": "defaultHtml",
                "maxLengthWords": 900
            },
            "required": true
        }
    }
}
