        },
        "contentUrl": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "media": {
            "type": "dynamiczone",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "components": [
                "shared.image",
                "shared.video"
